<% if (post.link){ %>
  <h1 itemprop="name" class="<%= class_name %>" >
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name" class="article-title-index" width="70%">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 itemprop="name" class="article-title" width="70%">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>
